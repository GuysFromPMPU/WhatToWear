<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhatToWear.AddClothesPage">
  <Label FontSize="25" Text="Add your clothes here" HorizontalOptions="Center"/>
  <Picker x:Name="TypesPicker" SelectedIndex="1" HorizontalOptions="Center">
    <Picker.Items>
      <x:String>Hat</x:String>
      <x:String>Wool-Hat</x:String>
      <x:String>Shirt</x:String>
      <x:String>Shirt with vest</x:String>
      <x:String>Short sleeve t-shirt</x:String>
      <x:String>Sweater with hood</x:String>
    </Picker.Items>
  </Picker>
</ContentPage>